FROM node:22-alpine
WORKDIR /app
ENV NPM_CONFIG_CACHE=/root/.npm

COPY package*.json ./
RUN sh -c 'if [ -f package-lock.json ]; then npm ci --no-audit --progress=false; else npm install --no-audit --progress=false; fi'

COPY . .
EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
